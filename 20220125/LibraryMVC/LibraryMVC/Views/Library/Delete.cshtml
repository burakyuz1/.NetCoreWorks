@model Book
@{
    TempData["Title"] = "Delete Book";
}

<div class="text-center">
    <h3>Are you sure about to delete @Model.BookName?</h3>
    <form method="post">
        @*Hidden?*@
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success btn-sm mr-2"><i class="fas fa-check"></i></button>
            <button asp-controller="Library" asp-action="Index" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>
        </div>
    </form>
</div>