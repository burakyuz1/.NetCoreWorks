@page
@model RazorPages.Pages.CalculatorModel
@{
    ViewData["Title"] = "Calculator";
}


<h1>CALCULATOR</h1>


<form method="post">
    <div class="form-group">
        <label asp-for="Number1"></label>
        <input type="text" asp-for="Number1" class="form-group" />
        <span asp-validation-for="Number1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Number2"></label>
        <input type="text" asp-for="Number2" class="form-group" />
        <span asp-validation-for="Number2"></span>
    </div>
    <div class="form-group">
        <label asp-for="Result"></label>
        <input type="text" asp-for="Result" class="form-group" readonly />
        <span asp-validation-for="Result"></span>
    </div>

    <button class="btn btn-success">Calculate</button>

</form>
