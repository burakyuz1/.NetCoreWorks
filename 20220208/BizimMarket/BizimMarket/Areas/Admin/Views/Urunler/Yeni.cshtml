@model Product

@{
    ViewBag.Title = "Yeni Urun";
}


<form method="post">
    <div class="row">
        <div class="col-md-4">

            <div class="mb-3">
                <label class="form-label">Ad</label>
                <input type="text" asp-for="ProductName" class="form-control"/>
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fiyat</label>
                <input type="text" asp-for="ProductPrice" class="form-control"/>
                <span asp-validation-for="ProductPrice"></span>
            </div>

            <label asp-for="CategoryId" class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Kategoriler">
                <option value="">Seciniz</option>
            </select>
            <span asp-validation-for="CategoryId"></span>
        </div>
    </div>
    <button class="btn btn-primary mt-3">Ekle</button>
</form>